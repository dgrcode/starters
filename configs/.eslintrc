{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "plugins": ["babel"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    // these are controlled by prettier
    "comma-dangle": "off",
    "react/jsx-curly-newline": "off",
    "space-before-function-paren": "off",
    "indent": "off",
    "no-unused-expressions": "off",
    "babel/no-unused-expressions": "error"
  }
}
